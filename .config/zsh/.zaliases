# Alias for quick SSH login to a remote host
alias sshlogin='ssh -o ConnectTimeout=5 -o ServerAliveInterval=30'
# Example: sshlogin user@hostname
# Explanation: This alias sets a 5-second connection timeout and keeps the session alive with pings every 30 seconds.

# Alias for SSH tunneling
alias sshtunnel='ssh -fNL'
# Example: sshtunnel 9999:localhost:22 user@hostname
