# vim: filetype=zsh

ECHOCAT ".zpackages - installing vital packages..."

# CARGO 
if ! CHECK_COMMANDS cargo > /dev/null; then
  package_manager_install cargo pkg-config
fi

#PACKAGE MANAGER
local pmpackages=(
  "npm"
)
local cargopackages=(
  "eza"
  "zoxide"
  "vivid"
  "lolcrab"
  "zellij"
)
for cargopackage in $cargopackages; do
  if ! CHECK_COMMANDS $cargopackage; then
    cargo install $cargopackage
  fi
done
