#vim: filetype=zsh
# Ltrc: Send text from the local clipboard or piped input to the remote server.
Ltrc() {
  if [ "$#" -ne 1 ]; then
    echo "Usage: Ltrc user@hostname"
    echo "Or: echo \"text\" | Ltrc user@hostname"
    return 1
  fi

  # Check if input is being piped
  if [ -t 0 ]; then
    # No input piped, use local clipboard content
    wl-paste | ssh "$1" "cat > /dev/null"
  else
    # Input is piped, use the piped content
    cat - | ssh "$1" "cat > /dev/null"
  fi
  echo "Text sent to remote."
}
