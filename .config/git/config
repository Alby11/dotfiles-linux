[includeIf "gitdir:$HOME/dev/work/"]
    path = ${XDG_CONFIG_HOME}/git/config-work

[includeIf "gitdir:$HOME/dev/class/"]
    path = ${XDG_CONFIG_HOME}/git/config-class

[safe]
    directory = $HOME/dev

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[init]
    defaultBranch = main  # Set the default branch name to 'main' for new repositories.

[protocol "file"]
    allow = always

[credential]
    helper = libsecret  # Use 'manager-core' as the credential helper to securely store credentials.

[core]
    autocrlf = input  # Convert CRLF line endings to LF when committing (useful for cross-platform projects).
    fsmonitor = false  # Disable filesystem monitoring for performance improvement.
    editor = nvim  # Set Neovim as the default text editor for Git.
    ; pager = ${XDG_CONFIG_HOME}/git/nvim-git-wrapper.zsh pager
    pager = delta
    excludesfile = ${XDG_CONFIG_HOME}/git/ignore

[include]
    path = ${XDG_CONFIG_HOME}/git/themes/catppuccin.gitconfig

[delta]
    syntax-theme = Catppuccin Mocha
    features = catppuccin-mocha
    dark = true      # or light = true, or omit for auto-detection
    navigate = true                # Enable keyboard navigation in diffs
    side-by-side = true            # Show diffs side-by-side
    line-numbers = true            # Display line numbers

[interactive]
    diffFilter = delta --color-only

[merge]
    ; tool = nvim
    conflictstyle = zdiff3

