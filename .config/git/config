# vim: ft=gitconfig

[include]
  path = ~/.config/git/themes/catppuccin.gitconfig

[user]
	name = alby11  # Your name used for commits.
	email = alby11@duck.com  # Your email used for commits.
  signingkey = 3C8E2F451C728897

[includeIf "gitdir:~/dev/work/"]
  path = ~/.config/git/config-work

[includeIf "gitdir:~/dev/class/"]
  path = ~/.config/git/config-class

[safe]
  directory = ~/dev

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
	defaultBranch = main  # Set the default branch name to 'main' for new repositories.

[protocol "file"]
  allow = always

[credential]
	helper = libsecret  # Use 'manager-core' as the credential helper to securely store credentials.

[core]
	autocrlf = input  # Convert CRLF line endings to LF when committing (useful for cross-platform projects).
	fsmonitor = false  # Disable filesystem monitoring for performance improvement.
	editor = nvim  # Set Neovim as the default text editor for Git.
	pager = ${XDG_CONFIG_HOME}/git/nvim-git-wrapper.zsh pager
	excludesfile = ${XDG_CONFIG_HOME}/ignore

[merge]
	tool = nvim

[mergetool "nvim"]
	cmd = ${XDG_CONFIG_HOME}/git/nvim-git-wrapper.zsh mergetool "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

[diff]
	tool = nvim

[difftool "nvim"]
	cmd = ${XDG_CONFIG_HOME}/git/nvim-git-wrapper.zsh difftool "$LOCAL" "$REMOTE"

[pull]
  rebase = false

[commit]
  gpgsign = true

[gpg]
  program = /usr/bin/gpg

[color]
	ui = auto  # Enable color in Git output to improve readability.
