[include]
  path = ~/.config/git/themes/catppuccin.gitconfig

[includeIf "gitdir:~/dev/work/"]
  path = ~/.config/git/config-work

[user]
	name = alby11  # Your name used for commits.
	email = alby11@duck.com  # Your email used for commits.

[core]
	autocrlf = input  # Convert CRLF line endings to LF when committing (useful for cross-platform projects).
	fsmonitor = false  # Disable filesystem monitoring for performance improvement.
	editor = "$HOME/.local/share/bob/nvim-bin/nvim"  # Set Neovim as the default text editor for Git.
  pager = delta
  excludesfile = ~/.config/git/ignore
	; pager = less -F -X  # Set 'less' as the pager for Git commands; '-F' will quit if output fits on screen, '-X' prevents clearing screen after quitting.

[color]
	ui = auto  # Enable color in Git output to improve readability.

[credential]
	helper = manager-core  # Use 'manager-core' as the credential helper to securely store credentials.

[init]
	defaultBranch = main  # Set the default branch name to 'main' for new repositories.

[diff]
	tool = nvim  # Set nvim as the diff tool for viewing differences.
	colorMoved = default  # Enable coloring moved lines in diffs.

[difftool "nvim"]
	cmd = "$HOME/.local/share/bob/nvim-bin/nvim -d \"$LOCAL\" \"$REMOTE\""  # Command to use Neovim for visual diffs between local and remote versions.
	prompt = false  # Do not prompt before launching the difftool.

[difftool "less"]
	cmd = less +F "$LOCAL" "$REMOTE"  # Use 'less' to view file differences; '+F' opens 'less' in follow mode, showing both local and remote files.
	detectRenames = true  # Enable rename detection when using 'less' as the diff tool.

[interactive]
  diffFilter = delta --color-only

[credential]
  helper = libsecret

[protocol "file"]
  allow = always

[delta]
  features = catppuccin-mocha
  side-by-side = false
  true-color = always
  hyperlinks = true
  line-numbers = true

[merge]
  ; tool = nvimdiff
  conflictstyle = diff3

[commit]
  gpgsign = false

[gpg]
  program = /sbin/gpg
