# vim: ft=gitconfig

[user]
    name = alby11  # Your name used for commits.
    email = alby11@duck.com  # Your email used for commits.
    signingkey = 3C8E2F451C728897  # GPG key for signing commits
 
[includeIf "gitdir:$HOME/dev/work/"]  # Include specific config for work directory
    path = ${XDG_CONFIG_HOME}/git/config-work  # Path to the work-specific git config
 
[includeIf "gitdir:$HOME/dev/class/"]  # Include specific config for class directory
    path = ${XDG_CONFIG_HOME}/git/config-class  # Path to the class-specific git config
 
[safe]  # Safe directory settings
    directory = $HOME/dev  # Mark the dev directory as safe
 
[filter "lfs"]  # Git LFS (Large File Storage) settings
    clean = git-lfs clean -- %f  # Command to clean files
    smudge = git-lfs smudge -- %f  # Command to smudge files
    process = git-lfs filter-process  # Command to process files
    required = true  # Require LFS filter

[init]
    defaultBranch = main  # Set the default branch name to 'main' for new repositories.

[protocol "file"]
    allow = always  # Allow file:// URLs for all Git operations.

[credential]
    helper = libsecret  # Use 'libsecret' as the credential helper to securely store credentials.

[core]
    autocrlf = input  # Convert CRLF line endings to LF when committing (useful for cross-platform projects).
    fsmonitor = false  # Disable filesystem monitoring for performance improvement.
    editor = nvim  # Set Neovim as the default text editor for Git.
    pager = delta  # Use Delta as the pager for Git output.
    excludesfile = ${XDG_CONFIG_HOME}/git/ignore  # Use a global .gitignore file.

[include]
    path = ${XDG_CONFIG_HOME}/git/themes/catppuccin.gitconfig  # Include theme-specific Git config.

[delta]
    features = catppuccin-mocha  # Use Catppuccin Mocha theme for Delta.
    dark = true  # Enable dark mode for Delta.
    hyperlinks = true  # Enable hyperlinks for terminal emulators that support them.
    navigate = true  # Enable keyboard navigation in diffs.
    side-by-side = true  # Show diffs side-by-side.
    line-numbers = true  # Display line numbers.

[interactive]
    diffFilter = delta --color-only  # Use Delta for interactive diffs.

[diff]
    colorMoved = default  # Highlight moved lines in diffs.

[merge]
    conflictstyle = zdiff3  # Use zdiff3 for conflict resolution.

[pull]
    rebase = false  # Do not rebase when pulling changes.

[commit]
    gpgsign = true  # Sign commits with GPG.

[gpg]
    program = /usr/bin/gpg  # Path to the GPG program.
