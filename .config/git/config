[pull]
    rebase = false

[commit]
    gpgsign = true

[gpg]
    program = /usr/bin/gpg

[color]
    ui = auto  # Enable color in Git output to improve readability.

[color "log"]
    commit = yellow
    branch = green
    remote = red
    author = cyan
    date = magenta

[alias]
    lg = log --pretty=format:"%C(yellow)%h%Creset %C(cyan)%an%Creset %C(green)%s%Creset %C(bold red)%ar%Creset"
